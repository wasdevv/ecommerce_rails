<table class="table table-light table-bordered w-auto ms-4">
  <thead class="table-light">
    <tr>
      <th scope="col" class="text-center">Product</th>
      <th scope="col" class="text-center">Quantity</th>
      <th scope="col" class="text-center">Unit Price</th>
      <%# <th scope="col" class="text-center">ID da compra EM BREVE</th> %>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr id="cart-item-<%= cart_item.id %>">
        <td class="align-middle text-center"><%= cart_item.product.name %></td>
        <td class="align-middle text-center"><%= cart_item.quantity %></td>
        <td class="align-middle text-center"><%= number_to_currency(cart_item.price) %></td>
        <td class="align-middle text-center">
          <%= link_to "Remove", remove_product_from_cart_cart_path(product_id: cart_item.product.id ), class: "remove-button-custom"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<td class="align-middle text-center">
  <div class="button-container">
    <% total_order = 0 %>

    <% @cart_items.each do |cart_item| %>
      <% total_order += cart_item.quantity * cart_item.price %>
    <% end %>

    <div id="total-order">
      <span style="color: black;" class="align-middle text-center">
        Total order: <%= number_to_currency(total_order) %>
      </span>
    </div>
    <br>
    <br>
    <br>
    <br>
    <%= link_to "Confirmar Pedido", checkout_cart_path(current_user), class: "button1" %>
    <%= link_to "Continuar Comprando", root_path, class: "button2" %>
  </div>
</td>