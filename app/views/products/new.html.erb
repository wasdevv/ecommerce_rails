<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                      <%= form_for @product do |f| %>
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">New Product!</h1>
                                </div>
                                    <div class="form-group">
                                        <%= f.label :name, class: "form-control-label" %>
                                        <%=  f.text_field :name, class: "form-control form-control-user", placeholder: "Enter name of Product...", autofocus: true %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.label :quantity, class: "form-control-label" %>
                                        <%= f.number_field :quantity, class: "form-control form-control-user", placeholder: "Quantity" %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.label :price, class: "form-control-label" %>
                                        <%= f.number_field :price, class: "form-control form-control-user", placeholder: "Price" %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.label :description, class: "form-control-label" %>
                                        <%= f.text_field :description, class: "form-control form-control-user", placeholder: "Description" %>
                                    </div>
                                <hr>
                                    <div class="form-group">
                                        <%= f.label :Image %>
                                        <%= f.file_field :image %>
                                    </div>
                                <hr>
                                <%= f.submit "Create", class: "btn btn-primary btn-user btn-block" %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>