</section>

<section id="product" class="product">
  <div class="middle-text">
    <h2>New Arrivals.<strong> BEST sellers of the month.</strong></h2>
  </div>

<% @products.each do |product| %>
  <div>
    <div class="product-content">
      <div class="box">
        <div class="box-img">
          <% if product.image.attached? %>
            <%= image_tag(product.image.variant(resize: "100x100")) %>
          <% else %>
            <%= image_tag("https://i.imgur.com/jl1rTQL.png", width: 100, height: 100) %>
          <% end %>
        </div>
        <h3><%= product.name %></h3>
        <h4><%= product.description %></h4>
        <div class="inbox">
          <div>
            <a href="#" class="price"><%= number_to_currency(product.price, unit: 'R$', separator: ',', delimiter: '.') %></a>
          </div>
          <div class="rating">
            <!-- Adicione a lógica de exibição das estrelas de acordo com a avaliação do produto -->
            <% (1..5).each do |i| %>
              <a href="#"><i class="bi bi-star-fill"></i></a>
            <% end %>
          </div>
        </div>
        <div class="heart">
          <i class="bi bi-suit-heart"></i>
        </div>
      </div>
    </div>
  </div>
<% end %>
</section>

